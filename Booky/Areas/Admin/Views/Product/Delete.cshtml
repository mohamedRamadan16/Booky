@model Product

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-controller="Product" asp-action="Delete" method="post">
            <div class="border p-3">
                <input type="hidden" asp-for="Id" value="@Model.Id" />
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" class="form-control border-0 shadow" readonly/>
                    <label asp-for="Title" class="ms-2">Product Name</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ISBN" class="form-control border-0 shadow" readonly />
                    <label asp-for="ISBN" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Author" class="form-control border-0 shadow" readonly />
                    <label asp-for="Author" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListPrice" class="form-control border-0 shadow" readonly/>
                    <label asp-for="ListPrice" class="ms-2"></label>
                </div>
                <div class="row mt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">
                            Back To List
                        </a>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>


